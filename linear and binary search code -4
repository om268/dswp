# Menu-driven program for Linear Search and Binary Search

def linear_search(arr, key):
    for i in range(len(arr)):
        if arr[i] == key:
            return i
    return -1

def binary_search(arr, key):
    low = 0
    high = len(arr) - 1
    while low <= high:
        mid = (low + high) // 2
        if arr[mid] == key:
            return mid
        elif key < arr[mid]:
            high = mid - 1
        else:
            low = mid + 1
    return -1

while True:
    print("\nSearch Menu")
    print("1. Linear Search")
    print("2. Binary Search")
    print("3. Exit")
    
    choice = int(input("Enter your choice: "))
    
    if choice == 3:
        print("Exiting program...")
        break
    
    arr = list(map(int, input("Enter numbers separated by spaces: ").split()))
    key = int(input("Enter the element to search: "))
    
    if choice == 1:
        result = linear_search(arr, key)
        if result != -1:
            print(f"Element found at index {result} (Linear Search)")
        else:
            print("Element not found (Linear Search)")
    elif choice == 2:
        arr.sort()  # Binary search requires sorted list
        print("Sorted array for Binary Search:", arr)
        result = binary_search(arr, key)
        if result != -1:
            print(f"Element found at index {result} (Binary Search)")
        else:
            print("Element not found (Binary Search)")
    else:
        print("Invalid choice! Please try again.")
